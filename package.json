{
  "name": "the-montessori-woodshop",
  "version": "1.0.0",
  "description": "Monorepo for the montessori woodshop medusa + next-js online store",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "yarn workspace storefront dev",
    "build": "yarn workspaces foreach -ptiv run build",
    "components-build": "yarn workspaces foreach -ptiv --no-private run build && yarn workspace @woodshop/components build-storybook",
    "build:ci": "bash scripts/build-ci.sh",
    "storybook": "yarn workspace @woodshop/components storybook",
    "clean": "rimraf ./packages/**/node_modules && rimraf node_modules"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/the-montessori-woodshop/the-montessori-woodshop.git"
  },
  "keywords": [
    "medusa",
    "nextjs",
    "montessori",
    "woodshop",
    "monorepo"
  ],
  "author": "Drew DeCarme",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/the-montessori-woodshop/the-montessori-woodshop/issues"
  },
  "homepage": "https://github.com/the-montessori-woodshop/the-montessori-woodshop#readme",
  "packageManager": "yarn@3.1.1",
  "engines": {
    "node": "17.3.0"
  },
  "resolutions": {
    "axios": "file:./packages/axios-fetch",
    "postcss": "8"
  },
  "dependencies": {
    "eslint": "^8.9.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  }
}
