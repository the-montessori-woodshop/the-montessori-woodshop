{
  "name": "@woodshop/components",
  "version": "1.0.0",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs",
      "import": "./dist/index.mjs",
      "node": "./dist/index.mjs",
      "require": "./dist/index.mjs"
    },
    "./fonts/*": "./fonts/*",
    "./css": {
      "default": "./dist/index.css",
      "import": "./dist/index.css",
      "node": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "scripts": {
    "types": "tsc",
    "bundle": "yarn node ./scripts/build.js",
    "build": "yarn bundle && yarn types",
    "build:npm": "npm run bundle && npm run types",
    "dev": "yarn bundle --watch --watch & tsc --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "serve-storybook": "wrangler dev",
    "deploy-storybook": "wrangler publish"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@cloudflare/wrangler": "^1.19.11",
    "@linaria/babel-preset": "^3.0.0-beta.15",
    "@linaria/webpack-loader": "^3.0.0-beta.16",
    "@mdx-js/react": "^2.1.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "^6.4.19",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@woodshop/builder": "^1.0.0",
    "babel-loader": "^8.2.4",
    "clsx": "^1.1.1",
    "eslint": "8.11.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-storybook": "^0.5.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.70.1",
    "sass": "^1.49.9",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0"
  },
  "peerDependencies": {
    "@woodshop/icons": "^1.0.0",
    "@woodshop/illustrations": "^1.0.0",
    "clsx": "^1.1.1",
    "framer-motion": "^6.2.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@linaria/react": "^3.0.0-beta.15",
    "@woodshop/icons": "^1.0.0",
    "@woodshop/illustrations": "^1.0.0",
    "framer-motion": "^6.2.8",
    "polished": "^4.1.4",
    "react-scripts": "^5.0.0"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
