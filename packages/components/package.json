{
  "name": "@woodshop/components",
  "version": "1.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "theme:build": "sass src/theme/index.scss css/theme.css",
    "types": "tsc",
    "bundle": "rollup --config rollup.config.cjs",
    "build": "yarn bundle && yarn theme:build && yarn types",
    "build:npm": "npm run bundle && npm run types & npm run theme:build",
    "dev": "yarn bundle --watch & yarn theme:build --watch & tsc --watch",
    "storybook": "start-storybook -p 6006 & yarn theme:build --watch",
    "build-storybook": "build-storybook",
    "serve-storybook": "wrangler dev",
    "deploy-storybook": "wrangler publish"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@cloudflare/wrangler": "^1.19.8",
    "@mdx-js/react": "^2.0.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@woodshop/builder": "^1.0.0",
    "babel-loader": "^8.2.3",
    "clsx": "^1.1.1",
    "eslint": "8.10.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-storybook": "^0.5.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup": "^2.70.0",
    "sass": "^1.49.9",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0"
  },
  "peerDependencies": {
    "@woodshop/icons": "^1.0.0",
    "@woodshop/illustrations": "^1.0.0",
    "clsx": "^1.1.1",
    "framer-motion": "^6.2.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@woodshop/icons": "^1.0.0",
    "@woodshop/illustrations": "^1.0.0",
    "framer-motion": "^6.2.8",
    "react-scripts": "^5.0.0"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
