{
  "name": "@woodshop/components",
  "version": "1.0.0",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs",
      "types": "./lib/index.d.ts"
    },
    "./styles": {
      "import": "./lib/index.css",
      "require": "./lib/index.css"
    },
    "./theme": {
      "import": "./theme/index.css",
      "require": "./theme/index.css"
    }
  },
  "files": [
    "lib/**",
    "theme/**"
  ],
  "scripts": {
    "theme:build": "sass src/theme/index.scss dist/styles/theme.css",
    "types": "tsc --project tsconfig.types.json",
    "bundle": "rollup --config rollup.config.cjs",
    "build": "yarn bundle && yarn theme:build && yarn types"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@woodshop/builder": "workspace:^",
    "clsx": "^1.1.1",
    "eslint": "8.5.0",
    "eslint-plugin-react": "^7.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.62.0",
    "sass": "^1.45.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
