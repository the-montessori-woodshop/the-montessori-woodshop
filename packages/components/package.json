{
  "name": "@woodshop/components",
  "version": "1.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "theme:build": "sass src/theme/index.scss css/theme.css",
    "types": "tsc",
    "bundle": "rollup --config rollup.config.cjs",
    "build": "yarn bundle && yarn theme:build && yarn types",
    "build:npm": "npm run bundle && npm run types & npm run theme:build",
    "dev": "yarn bundle --watch & yarn theme:build --watch & tsc --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.4.16",
    "@storybook/addon-docs": "^6.4.16",
    "@storybook/addon-essentials": "^6.4.16",
    "@storybook/addon-links": "^6.4.16",
    "@storybook/builder-webpack5": "^6.4.16",
    "@storybook/manager-webpack5": "^6.4.16",
    "@storybook/node-logger": "^6.4.16",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.16",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@woodshop/builder": "file:../builder",
    "clsx": "^1.1.1",
    "eslint": "8.7.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-storybook": "^0.5.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.64.0",
    "sass": "^1.49.0",
    "typescript": "^4.5.4",
    "webpack": "^5.67.0"
  },
  "peerDependencies": {
    "@woodshop/icons": "workspace:^",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@woodshop/icons": "workspace:^",
    "react-scripts": "^5.0.0"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
