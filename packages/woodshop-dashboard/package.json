{
  "private": true,
  "name": "@woodshop/dashboard",
  "description": "The Montessori Woodshop's dashboard.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=17.3.0"
  },
  "sideEffects": false,
  "scripts": {
    "lint": "yarn eslint --ext .tsx,.ts ./app --fix",
    "build": "yarn scss --no-source-map && NODE_ENV=production remix build",
    "styles": "yarn node ./scripts/styles.mjs",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "scss": "sass app/styles.scss:app/styles.css",
    "dev": "yarn dev:remix & yarn dev:wrangler & yarn dev:styles",
    "dev:remix": "cross-env NODE_ENV=development remix build & remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev:styles": "yarn node ./scripts/styles-dev.mjs & yarn scss --watch --embed-source-map"
  },
  "dependencies": {
    "@linaria/core": "^3.0.0-beta.22",
    "@linaria/react": "^3.0.0-beta.22",
    "@remix-run/cloudflare": "^1.6.0",
    "@remix-run/cloudflare-pages": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@remix-run/server-runtime": "^1.6.1",
    "@woodshop/api": "workspace:^",
    "@woodshop/components": "workspace:^",
    "@woodshop/icons": "workspace:^",
    "@woodshop/illustrations": "workspace:^",
    "clsx": "^1.1.1",
    "framer-motion": "^6.3.11",
    "markdown-it": "^13.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "react-table": "^7.8.0",
    "react-virtualized-auto-sizer": "^1.0.6",
    "react-window": "^1.8.7",
    "remix-auth": "^3.2.2",
    "remix-auth-auth0": "^1.3.7"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@cloudflare/workers-types": "^3.13.0",
    "@remix-run/dev": "^1.6.0",
    "@remix-run/eslint-config": "^1.6.0",
    "@types/markdown-it": "^12.2.3",
    "@types/react": "17.0.47",
    "@types/react-dom": "17.0.17",
    "@types/react-table": "^7.7.12",
    "@types/react-virtualized-auto-sizer": "^1.0.1",
    "@types/react-window": "^1.8.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "glob-watcher": "^5.0.5",
    "sass": "^1.52.3",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.15"
  }
}
