generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

datasource db {
  provider          = "postgresql"
  url               = env("WOODSHOP_API_DATABASE_URL")
  shadowDatabaseUrl = env("WOODSHOP_API_SHADOW_DATABASE_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  String
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique
  first_name     String
  last_name      String
  email          String?  @unique
  last_logged_in DateTime @default(now())
  created_at     DateTime @default(now()) @map(name: "created_at")
  updated_at     DateTime @updatedAt @map(name: "updated_at")
  posts          Post[]

  @@map(name: "users")
}

model Image {
  id         Int      @id @default(autoincrement())
  title      String
  url        String
  service_id String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
