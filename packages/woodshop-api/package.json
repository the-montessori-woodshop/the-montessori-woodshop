{
  "name": "@woodshop/api",
  "version": "1.0.0",
  "description": "The supporting API and Database Schema for The Montessori Woodshop storefront",
  "scripts": {
    "client:build": "yarn node ./scripts/build-client.mjs && tsc -p tsconfig.client.json",
    "client:dev": "yarn node ./scripts/build-client.mjs --watch",
    "publish": "wrangler publish",
    "build": "yarn generate && yarn node ./scripts/build.js",
    "generate": "PRISMA_CLIENT_ENGINE_TYPE=dataproxy && prisma generate",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate status && prisma migrate deploy",
    "push": "prisma push",
    "dev": "yarn generate && wrangler dev --ip 127.0.0.1 --port 8888"
  },
  "main": "dist/worker.js",
  "types": "client/types/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/the-montessori-woodshop/the-montessori-woodshop.git"
  },
  "author": "Drew DeCarme (drew@themontessoriwoodshop.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/the-montessori-woodshop/the-montessori-woodshop/issues"
  },
  "homepage": "https://github.com/the-montessori-woodshop/the-montessori-woodshop#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@cloudflare/wrangler": "^1.19.8",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "esbuild": "^0.14.25",
    "esbuild-plugin-alias": "^0.2.1",
    "prisma": "3.10.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "3.10.0",
    "itty-router": "^2.5.2"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
