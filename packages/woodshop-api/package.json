{
  "name": "@woodshop/api",
  "version": "1.0.0",
  "description": "The supporting API and Database Schema for The Montessori Woodshop storefront",
  "scripts": {
    "publish": "wrangler publish",
    "generate": "yarn node ./scripts/env.js && prisma generate",
    "migrate-dev": "yarn node ./scripts/env.js && prisma migrate dev",
    "dev": "yarn generate && wrangler dev"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/the-montessori-woodshop/the-montessori-woodshop.git"
  },
  "author": "Drew DeCarme (drew@themontessoriwoodshop.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/the-montessori-woodshop/the-montessori-woodshop/issues"
  },
  "homepage": "https://github.com/the-montessori-woodshop/the-montessori-woodshop#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@cloudflare/wrangler": "^1.19.8",
    "dotenv-cli": "^5.0.0",
    "esbuild": "^0.14.22",
    "esbuild-loader": "^2.18.0",
    "prisma": "3.10.0",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0"
  },
  "dependencies": {
    "@prisma/client": "3.10.0",
    "dotenv": "^16.0.0",
    "itty-router": "^2.5.2"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
