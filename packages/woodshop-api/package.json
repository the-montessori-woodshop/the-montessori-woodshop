{
  "name": "@woodshop/api",
  "version": "1.0.0",
  "description": "The supporting API and Database Schema for The Montessori Woodshop storefront",
  "scripts": {
    "publish": "wrangler publish",
    "types": "tsc --project tsconfig.types.json",
    "build": "yarn node ./scripts/build.js && yarn types",
    "generate:dev": "dotenv -e ../../.env -- prisma generate",
    "generate": "prisma generate --data-proxy",
    "migrate:dev": "prisma migrate dev",
    "migrate": "WOODSHOP_API_DATABASE_URL=\"$WOODSHOP_API_MIGRATE_DATABASE_URL\" prisma migrate deploy",
    "push": "prisma push",
    "dev": "wrangler dev --ip 127.0.0.1 --port 8888 & yarn types --watch"
  },
  "main": "dist/worker.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/worker.js",
      "require": "./dist/worker.js",
      "default": "./dist/worker.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/the-montessori-woodshop/the-montessori-woodshop.git"
  },
  "author": "Drew DeCarme (drew@themontessoriwoodshop.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/the-montessori-woodshop/the-montessori-woodshop/issues"
  },
  "homepage": "https://github.com/the-montessori-woodshop/the-montessori-woodshop#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^3.13.0",
    "@cloudflare/wrangler": "^1.19.12",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "dotenv-cli": "^5.1.0",
    "esbuild": "^0.14.46",
    "esbuild-plugin-alias": "^0.2.1",
    "prisma": "3.15.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@cfworker/jwt": "^4.0.2",
    "@prisma/client": "3.15.2",
    "itty-router": "2.6.1"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
