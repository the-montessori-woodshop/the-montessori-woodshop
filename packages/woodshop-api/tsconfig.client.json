{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": false,
    "noEmit": false,
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "./dist/client",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/client",
    "declarationMap": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/client"]
}
