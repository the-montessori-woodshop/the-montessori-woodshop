{
  "private": true,
  "name": "store",
  "version": "1.0.0",
  "description": "The Montessori Woodshop's storefront.",
  "main": "dist/worker.js",
  "sideEffects": false,
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14"
  },
  "workspaces": {
    "packages": [
      "packages/components"
    ]
  },
  "overrides": {
    "axios": "file:./packages/axios-fetch"
  },
  "scripts": {
    "build": "yarn postinstall && cross-env NODE_ENV=production remix build",
    "build:npm": "npm run postinstall && cross-env NODE_ENV=production remix build",
    "build:ci": "bash scripts/build-ci.sh",
    "dev": "yarn postinstall && cross-env NODE_ENV=development yarn dev:wrangler & yarn dev:remix",
    "postinstall": "remix setup cloudflare-pages",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --watch ./build",
    "start": "npm run dev:wrangler"
  },
  "dependencies": {
    "@medusajs/medusa-js": "^1.0.9",
    "@remix-run/cloudflare-pages": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@woodshop/components": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.0",
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "esbuild": "0.14.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.5.4",
    "wrangler": "pages"
  }
}
