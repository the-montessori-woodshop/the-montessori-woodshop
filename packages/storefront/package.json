{
  "private": true,
  "name": "storefront",
  "version": "1.0.0",
  "description": "The Montessori Woodshop's storefront.",
  "license": "Apache-2.0",
  "dependencies": {
    "@medusajs/medusa-js": "1.2.2",
    "@remix-run/cloudflare-pages": "1.6.0",
    "@remix-run/react": "1.6.0",
    "@woodshop/components": "workspace:^",
    "@woodshop/icons": "workspace:^",
    "@woodshop/illustrations": "workspace:^",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "remix": "1.6.0",
    "styled-components": "5.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.13.0",
    "@remix-run/dev": "1.6.0",
    "@types/react": "17.0.47",
    "@types/react-dom": "17.0.17",
    "@types/styled-components": "5.1.25",
    "cross-env": "7.0.3",
    "typescript": "4.7.4",
    "wrangler": "pages"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "engines": {
    "node": ">=17.3.0"
  },
  "resolutions": {
    "axios": "workspace:./packages/axios-fetch",
    "postcss": "8"
  },
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "build": "cross-env NODE_ENV=production remix build",
    "build:ci": "npm run postinstall && yarn workspaces foreach -ptiv run build && yarn build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "cross-env NODE_ENV=development remix build && yarn dev:remix & yarn dev:wrangler",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "packageManager": "yarn@3.2.0"
}
